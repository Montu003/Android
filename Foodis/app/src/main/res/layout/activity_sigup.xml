<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigupActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/applogo"/>

    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/purple_500"
        android:textAlignment="center"
        android:text="Login to contiune with\n facbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Create account from here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
-->

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the name "
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:drawablePadding="16dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_baseline_person_24" />

    <EditText
        android:id="@+id/et_email_sign_up"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:hint="Enter Email address"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_contact"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:hint="Enter the contect"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_password"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_confirmpassword"
        android:drawablePadding="16dp"
        android:textStyle="bold"
        android:padding="16dp"
        android:inputType="textPassword"
        android:hint="Enter Confirm password"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E88E5"
        android:layout_marginTop="30dp"
        android:text="Signup"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>