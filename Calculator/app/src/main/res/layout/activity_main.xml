<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/output_text"
        android:layout_marginBottom="16dp"
        android:gravity="right"
        android:paddingRight="16dp"
        android:text=""
        android:textColor="#102FDA"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/output_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll1"
        android:layout_marginBottom="16dp"
        android:gravity="right"
        android:paddingRight="16dp"
        android:text=""
        android:textColor="#102FDA"
        android:textSize="50dp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_ac"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="AC"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/tv_start_bracket"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="("
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_end_bracket"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text=")"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_divided"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="/"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="45dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_multiplication"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="x"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="45dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_subtraction"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="45dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_addition"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="45dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/tv_clear"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:backgroundTint="#962645"
                android:layout_marginLeft="30dp"
                android:background="@color/black"
                android:src="@drawable/cl"/>

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_dot"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/tv_equal"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="30dp"
                android:text="="
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="45dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>