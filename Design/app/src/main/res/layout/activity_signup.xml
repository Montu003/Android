<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup with Google"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/image_52"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <LinearLayout
        android:layout_marginHorizontal="24dp"
        android:id="@+id/iv_email"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_email_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:hint="Email Id"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="24dp"
        android:id="@+id/iv_password"
        app:layout_constraintEnd_toEndOf="@+id/iv_email"
        app:layout_constraintStart_toStartOf="@+id/iv_email"
        app:layout_constraintTop_toBottomOf="@+id/iv_email"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_lock_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/iv_name"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/iv_password"
        app:layout_constraintStart_toStartOf="@+id/iv_password"
        app:layout_constraintTop_toBottomOf="@+id/iv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_person_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:hint="name"
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/iv_company"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="@id/iv_name"
        app:layout_constraintStart_toStartOf="@+id/iv_name"
        app:layout_constraintTop_toBottomOf="@+id/iv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_home_24"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:hint="Company name"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/iv_contact"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_company"
        app:layout_constraintStart_toStartOf="@+id/iv_company"
        app:layout_constraintTop_toBottomOf="@+id/iv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_local_phone_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/black"
            android:hint="Contact"
            android:textSize="16dp"
            android:inputType="number" />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_gradient_10"
        android:text="Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_contact" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="joined us before?"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Login"
        app:layout_constraintStart_toStartOf="@+id/btn_Registration"
        app:layout_constraintTop_toTopOf="@+id/btn_Login"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/btn_Login"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="76dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/btn_Registration"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/btn_Registration" />
</androidx.constraintlayout.widget.ConstraintLayout>